{
	"name": "@gmtdi/frontent-shared-components",
	"version": "1.0.1-1",
	"license": "MIT",
	"type": "module",
	"types": "./dist/index.d.ts",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"files": [
		"dist"
	],
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"repository": {
		"url": "git://github.com/gmtdi/frontend-shared-components.git"
	},
	"dependencies": {
		"@reduxjs/toolkit": "^1.9.5",
		"directory-tree": "^3.5.1",
		"html-react-parser": "^4.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-element-to-jsx-string": "^15.0.0",
		"react-redux": "^8.1.1",
		"react-router-dom": "^6.14.1",
		"react-scripts": "5.0.1",
		"react-syntax-highlighter": "^15.5.0",
		"redux-persist": "^6.0.0",
		"styled-components": "^6.0.1",
		"web-vitals": "^2.1.4"
	},
	"peerDependencies": {
		"react": "^18.2.0"
	},
	"scripts": {
		"prestart": "yarn prebuild",
		"start": "react-scripts start",
		"prebuild": "node --trace-warnings component-list.js",
		"clean": "rimraf dist",
		"build": "yarn clean && rollup -c --bundleConfigAsCjs",
		"release": "standard-version",
		"test": "jest --coverage --colors --silent --verbose --watchAll=false",
		"test:debug": "jest --watchAll --coverage --color --detectOpenHandles --silent false --verbose true --debug",
		"test:focus": "jest -i ./__tests__/helpers/FunctionHelpers.test.ts -t --watchAll --coverage --color --detectOpenHandles --silent false --verbose true --debug",
		"coverage": "open -a \"Google Chrome\" ./coverage/index.html",
		"test:clear": "jest --clearCache"
	},
	"release": {
		"branches": [
			"main"
		]
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		],
		"rules": {
			"no-template-curly-in-string": "off"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@inrupt/jest-jsdom-polyfills": "^2.1.3",
		"@rollup/plugin-commonjs": "^25.0.2",
		"@rollup/plugin-node-resolve": "^15.1.0",
		"@rollup/plugin-sucrase": "^5.0.1",
		"@rollup/plugin-typescript": "^11.1.2",
		"@testing-library/jest-dom": "^6.1.0",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^13.5.0",
		"@types/jest": "^29.5.4",
		"@types/node": "^16.18.37",
		"@types/react": "^18.2.14",
		"@types/react-dom": "^18.2.6",
		"@types/react-redux": "^7.1.25",
		"@types/react-syntax-highlighter": "^15.5.7",
		"@types/rollup-plugin-peer-deps-external": "^2.2.1",
		"@types/styled-components": "^5.1.26",
		"jest": "^29.6.3",
		"jest-environment-jsdom": "^29.6.3",
		"jest-environment-node": "^29.6.3",
		"prettier": "^2.8.8",
		"prettier-plugin-organize-imports": "^3.2.2",
		"rimraf": "^5.0.1",
		"rollup": "^3.26.2",
		"rollup-plugin-delete": "^2.0.0",
		"rollup-plugin-dts": "^5.3.0",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-sourcemaps": "^0.6.3",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-tsconfig-paths": "^1.5.1",
		"rollup-plugin-typescript2": "^0.35.0",
		"standard-version": "^9.5.0",
		"ts-jest": "^29.1.1",
		"typescript": "^5.1.6"
	},
	"jest": {
		"preset": "ts-jest/presets/default-esm",
		"testEnvironment": "jest-environment-node",
		"coverageReporters": [
			"json",
			"html"
		],
		"coverageProvider": "v8",
		"transform": {
			"node_modules/variables/.+\\.(j|t)sx?$": "ts-jest",
			"^.+\\.(ts|tsx|js|jsx)?$": [
				"ts-jest",
				{
					"useESM": true,
					"tsconfig": {
						"jsx": "react-jsx"
					}
				}
			]
		},
		"moduleFileExtensions": [
			"js",
			"mjs",
			"cjs",
			"esm",
			"jsx",
			"ts",
			"tsx"
		],
		"moduleNameMapper": {
			"\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js",
			"component-list.json": "<rootDir>/src/component-list.json",
			"^components/(.*)": "<rootDir>/src/components/$1",
			"^datatypes/(.*)": "<rootDir>/src/datatypes/$1",
			"^helpers/(.*)": "<rootDir>/src/helpers/$1",
			"^hooks/(.*)": "<rootDir>/src/hooks/$1",
			"^modules/(.*)": "<rootDir>/src/modules/$1",
			"^store/(.*)": "<rootDir>/src/store/$1",
			"^styling/(.*)": "<rootDir>/src/styling/$1"
		},
		"transformIgnorePatterns": [
			"node_modules/(?!variables/.*)"
		]
	}
}
